<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1>Goon Fantasy Football</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-3 columns ">
    <table summary="EPL Standings">
      <th colspan="2"><%=@standings['leagueCaption']%></th>
      <th>P</th>
      <th>Pts</th>
      <% @standings['standing'].each do |team| %>
          <tr>
            <td><%= team['position']%></td>
            <td><%= team['teamName']%></td>
            <td><%= team['playedGames']%></td>
            <td><%= team['points']%></td>
          </tr>
      <% end %>
    </table>
  </div>

  <aside class="myLeagueTables">
    <!--show users league tables here-->
  </aside>

  <div class="large-6 columns">
    <div class="row">
      <div class="large-10 columns">
        <%= form_for Post.new, url: {:controller => :post, :action => 'create'} do |f| %>
            <%= f.text_area :text, :class => 'expand' %>
            <%= f.submit %>
        <% end %>
        <% @posts.each do |post|%>
            <div>
              <%= User.find(post.user).username+':'%>
              <%= post.text %>
            </div>
        <% end %>
      </div>
    </div>
    <hr/>
  </div>

</div>

